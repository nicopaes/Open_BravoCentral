@code {

    private ProductivityQuestions allprodquestions = new ProductivityQuestions();
    [Parameter]
    public int week { get; set; }

    private bool isSending = false;

    protected override void OnInitialized()
    {
        base.OnInitialized();
        allprodquestions.questions = new List<Question>(5);
        for (int i = 0; i < 10; i++)
        {
            var q = new Question();
            q.value = -1;
            allprodquestions.questions.Add(q);
        }
    }

    private async void OnClickSubmit()
    {
        //TODO Block if no current user
        allprodquestions.week = DbMirror.main.listWeeks[week];
        allprodquestions.authorEmail = DbMirror.main.currentUser.email;
        for (int i = 0; i < allprodquestions.questions.Count; i++)
        {
            if (allprodquestions.questions[i].value == -1)
            {
                //TODO ERROR
                return;
            }
        }
        string baseURI = $"{DbMirror.main.serveruri}/productivity/question";
        var client = new RestClient(baseURI);
        var request = new RestRequest()
        .AddQueryParameter("date", DateTime.Now.ToUniversalIso8601().ToString())
        .AddStringBody(JsonConvert.SerializeObject(allprodquestions), DataFormat.Json);

        try
        {
            isSending = true;
            var res = await client.PostAsync(request);
            if (res.StatusCode == System.Net.HttpStatusCode.Accepted)
            {
                Utils.Log(res.StatusCode);
                Utils.Log(res.Content);
            }
        }
        catch (System.Net.Http.HttpRequestException e)
        {
            isSending = false;
            Utils.Log("ERROR: " + e.Message);
            StateHasChanged();
        }
        finally
        {
            isSending = false;
            StateHasChanged();
            
            NavigationManager.NavigateTo("/productivity/main");
        }
    }

    private async void OnClickStats()
    {
        try
        {
            await DbMirror.main.GetProductivityQuestionsFromDB();
            NavigationManager.NavigateTo("/productivity/main");
        }
        catch (Exception e)
        {
            Utils.Log(e.Message);
            NavigationManager.NavigateTo("/productivity/main");
        }
    }
}
